<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment"
    android:padding="16dp">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_auto_minute_sync"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/setting_enable_auto_minute_sync"
    android:textSize="18sp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_auto_sync_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/setting_enable_auto_minute_sync_description"
    android:textSize="14sp"
    app:layout_constraintTop_toBottomOf="@id/switch_auto_minute_sync"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="4dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>